<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_c"
    android:orientation="vertical"
    tools:context=".AnalysisActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="81dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="#분석"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/year"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" />


            <Spinner
                android:id="@+id/month"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#323232"
                android:text="검색"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aimg1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aimg5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aimg9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

            <ImageView
                android:id="@+id/aimg10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/analysis_flower" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Happy"
            android:textColor="#F07FB8"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp" />

        <TextView
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Surprised"
            android:textColor="#EBC581"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp" />

        <TextView
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Angry"
            android:textColor="#93E075"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Sad"
            android:textColor="#75CEFA"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginLeft="58dp" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Soso"
            android:textColor="#E29FF0"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

</LinearLayout>
