<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/bg_c"
    android:orientation="vertical"
    android:id="@+id/drawer"
    android:padding="0dp"
    android:layout_margin="0dp">

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="메뉴닫기"
        app:backgroundTint="@color/bg_d" />

    <!--닉네임 받아오기-->
    <TextView
        android:id="@+id/name"
        android:layout_width="165dp"
        android:layout_height="114dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="님 반갑습니다"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Floremo Menu"
        android:gravity="center"
        android:textSize="13pt"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/bg_b"
        android:layout_marginHorizontal="0dp"
        android:padding="0dp">

        <Button
            android:id="@+id/btn_todayFlower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todayFlower"
            android:layout_margin="2dp"
            android:padding="0dp"
            android:textSize="10pt"
            android:background="@color/bg_c"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/bg_i"/>

        <Button
            android:id="@+id/btn_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analysis"
            android:layout_margin="2dp"
            android:padding="0dp"
            android:textSize="10pt"
            android:background="@color/bg_c"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


        </LinearLayout>

        <!--        /*원래는 app:backgroundTint=#090909"이었는데 app이 빨간색으로 변하여 android라고 바꿔줌 */-->
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#BCAFD5"
        android:text="로그아웃"
        android:textSize="18dp"
        app:backgroundTint="@color/bg_d" />

</LinearLayout>
