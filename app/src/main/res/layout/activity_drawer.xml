<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:layout_margin="0dp"
    android:background="@color/bg_c"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/bg_h">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반갑습니다 :)"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">
        </TextView>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/white_flower"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/profile_icon"
            android:gravity="right"
            android:text="       "
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 님"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/name2"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name2"
            android:layout_alignLeft="@id/name2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:text="flower@floremo.com"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 Floremo를 기록해보세요"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="270dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/white_flower"
            android:layout_marginTop="298dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 꽃"
            android:textColor="#ffffff"
            android:id="@+id/btn_todayFlower"
            android:layout_marginTop="298dp"
            android:layout_marginLeft="70dp"
            android:textSize="16dp"
            android:onClick="OnClick"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="340dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/white_flower"
            android:layout_marginTop="368dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#분석 기능"
            android:textColor="#ffffff"
            android:id="@+id/btn_analysis"
            android:layout_marginTop="368dp"
            android:layout_marginLeft="70dp"
            android:textSize="16dp"
            android:onClick="OnClick"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80ffffff"
            android:layout_marginTop="410dp"/>


        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="630dp"
            android:layout_centerHorizontal="true"
            android:background="@color/bg_j"
            android:text="로그아웃"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>