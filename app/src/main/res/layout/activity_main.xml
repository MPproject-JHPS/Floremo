<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_c"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--navigation menu 열기-->
        <include
            android:id="@+id/toolbar_main"
            layout="@layout/toolbar_main"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="81dp" />


        <LinearLayout
            android:id="@+id/main_part0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--닉네임 받아오기-->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="님 반갑습니다"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_part1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="2">

            <ImageView
                android:padding="0dp"
                android:src="@drawable/emo_char1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="80dp"
                android:layout_width="80dp"/>

            <ImageView
                android:padding="0dp"
                android:src="@drawable/emo_char2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="80dp"
                android:layout_width="80dp"/>

            <ImageView
                android:padding="0dp"
                android:src="@drawable/emo_char3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="80dp"
                android:layout_width="80dp"/>

            <ImageView
                android:padding="0dp"
                android:src="@drawable/emo_char4"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="80dp"
                android:layout_width="80dp"/>

            <ImageView
                android:padding="0dp"
                android:src="@drawable/emo_char5"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="80dp"
                android:layout_width="80dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_part1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="2">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 Floremo는 어떤가요?"/>

            <Button
                android:id="@+id/flowerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="flower"
                app:backgroundTint="@color/bg_d" />


            <Button
                android:id="@+id/recordingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="recording"
                app:backgroundTint="@color/bg_d" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_part3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/emotion_vase1"
                android:padding="0dp"
                android:src="@drawable/emotion_vase"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="80dp"/>

            <ImageButton
                android:id="@+id/emotion_vase2"
                android:padding="0dp"
                android:src="@drawable/emotion_vase"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="80dp"/>

            <ImageButton
                android:id="@+id/emotion_vase3"
                android:padding="0dp"
                android:src="@drawable/emotion_vase"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="80dp"/>

            <ImageButton
                android:id="@+id/emotion_vase4"
                android:padding="0dp"
                android:src="@drawable/emotion_vase"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="80dp"/>

            <ImageButton
                android:id="@+id/emotion_vase5"
                android:padding="0dp"
                android:src="@drawable/emotion_vase"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="80dp"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>