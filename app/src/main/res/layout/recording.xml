<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_c" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="81dp" />

            <ImageButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:onClick="OnClickHandler"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar"
                android:text="calendar"
                app:backgroundTint="@color/bg_c"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/toolbar" />

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Today's Date"
                android:textSize="18sp"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="90dp" />



            <Button
                android:id="@+id/testBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테스트예용"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="90dp"/>

            <ImageView
                android:id="@+id/testImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="190dp"/>

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="250dp"
                android:adjustViewBounds="true"
                android:maxWidth="75dp"
                android:maxHeight="75dp"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/previous"
                android:text="PREV"
                app:backgroundTint="@color/bg_c"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:adjustViewBounds="true"
                android:maxWidth="75dp"
                android:maxHeight="75dp"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/next"
                android:text="NEXT"
                app:backgroundTint="@color/bg_c"
                tools:ignore="MissingConstraints" />

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:src="@drawable/flower1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:src="@drawable/flower2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:src="@drawable/flower3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:src="@drawable/flower4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:src="@drawable/flower5" />
                </LinearLayout>
            </ViewFlipper>

            <LinearLayout
                android:id="@+id/seekBarView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Happy"
                    android:textColor="#F07FB8"
                    tools:ignore="MissingConstraints" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:layout_marginLeft="42dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/seekBarView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="465dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Surprised"
                    android:textColor="#EBC581"
                    tools:ignore="MissingConstraints" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginLeft="21dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seekBarView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Angry"
                    android:textColor="#93E075"
                    tools:ignore="MissingConstraints" />

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginLeft="46dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seekBarView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="535dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Sad"
                    android:textColor="#75CEFA"
                    tools:ignore="MissingConstraints" />

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seekBarView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Soso"
                    android:textColor="#E29FF0"
                    tools:ignore="MissingConstraints" />

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>