<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.androidtown.Floremo">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TP">

        <activity android:name=".TodayFlower" />
        <activity android:name=".ShowRecord" />
        <activity android:name=".Analysis" />
        <activity android:name=".setting" />
        <activity android:name=".addRecord" />
        <activity android:name=".login" />
        <activity android:name="org.androidtown.Floremo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.androidtown.Floremo.LoginActivity"/>
        <activity android:name="org.androidtown.Floremo.JoinActivity"/>

    </application>

</manifest>